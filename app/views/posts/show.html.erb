<div class="post">
  <%=render partial: 'partials/post_content', locals: {post: @post, user: @user}%>
  <div class="post--comments">
    <h3>Comments</h3>
    <%@post.comments.each do |comment|%>
      <div class="comment">
        <p><span><%=comment.user.name%></span>:&nbsp;<%=comment.text%></p>
      </div>
    <%end%>
  </div>
</div>
