<%posts.each do |post, idx|%>
  <div class="user--post">
    <h3><%=link_to post.title, user_post_path(@user, post) %></h3>
    <p><%= post.text.slice(0...50) + '...' %></p>
    <p class='count'>Comments <%=post.comments_counter%>, Likes <%=post.likes_counter%></p>
    <%= button_to "Delete Post", user_post_path(@user, post), method: :delete, class: 'btn delete-post'%>
    <div class="user--post--comments">
      <h3>Comments</h3>
      <%post.comments.each do |comment|%>
        <p><%= comment.user.name %>: <%= comment.text %></p>
      <%end%>
    </div>
  </div>
<%end%>
